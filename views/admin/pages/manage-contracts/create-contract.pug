mixin createContract(prefixAdmin)
  .modal.fade#modalCreate(data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalCreateLabel" aria-hidden="true")
    .modal-dialog.modal-dialog-scrollable
      .modal-content
        .modal-header
          h5.modal-title#modalCreateLabel Tạo hợp đồng
          button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
        .modal-body
          form(
            action=`${prefixAdmin}/manage-contracts`
            id="form-create-product"
            method="POST"
          )
            label(for="ngayhethan") Ngày hết hạn 
              b(style="color: red;") *
            input#ngayhethan(
              type="date" 
              name="ngayhethan" 
              placeholder="Ngày hết hạn" 
              required)

            label(for="sotien_coc") Số tiền cọc
              b(style="color: red;") *
            input#sotien_coc(
              type="text" 
              name="sotien_coc" 
              placeholder="Số tiền cọc" 
              required)

            label(for="cccd") CCCD
              b(style="color: red;") *
            input#cccd(
              type="text" 
              name="cccd" 
              placeholder="CCCD" 
              required)

            label(for="maphong") Phòng
              b(style="color: red;") *
            input#maphong(
              type="text" 
              name="maphong" 
              placeholder="Phòng" 
              required)
            .modal-footer
              div(class="form-group")
                button( 
                    type="submit"
                    class="btn btn-primary"
                    ) Tạo mới
