extends ../../layouts/default.pug

block main
  section
    .container.row
      .container-decs.col-4
        .text Quản lý tài khoản khách thuê
        .text-sub Tất cả tải khoản khách thuê trong nhà trọ
      .search.col-6
        input(type="text" placeholder="Tìm kiếm tài khoản khách thuê")
    .table-rooms.table-responsive
      table.table.table-bordered
        thead.table-secondary
          tr
            th Tên khách hàng
            th Tên đăng nhập
            th Phòng
       
        tbody.table-success
          each item in accounts
            tr
              td #{item.tenkh}
              td #{item.tendnkh}
              td #{item.maphong}
    
        